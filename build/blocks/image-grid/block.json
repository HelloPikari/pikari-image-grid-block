{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "pikari/image-grid",
  "version": "0.4.0",
  "title": "Image Grid",
  "category": "design",
  "icon": "grid-view",
  "description": "Display four images in a customizable grid layout.",
  "example": {},
  "supports": {
    "html": false,
    "align": [
      "wide",
      "full"
    ],
    "color": {
      "background": false,
      "text": false,
      "link": false,
      "gradients": false,
      "border": false,
      "shadow": false,
      "header": false
    },
    "spacing": {
      "margin": true,
      "padding": true
    }
  },
  "textdomain": "pikari-image-grid",
  "editorScript": "file:./index.js",
  "render": "file:./render.php",
  "style": "file:./style-index.css",
  "editorStyle": "file:./index.css",
  "viewScript": "file:./view.js",
  "attributes": {
    "className": {
      "type": "string",
      "default": "wp-block-pikari-image-grid"
    },
    "gridLayout": {
      "type": "string",
      "default": "asymmetric"
    },
    "enableCaptions": {
      "type": "boolean",
      "default": false
    },
    "imageBorderRadius": {
      "type": "number",
      "default": 8
    },
    "imageBorderWidth": {
      "type": "number",
      "default": 0
    },
    "imageBorderColor": {
      "type": "string",
      "default": ""
    },
    "gap": {
      "type": "number",
      "default": 16
    },
    "image1Id": {
      "type": "number",
      "default": 0
    },
    "image1Url": {
      "type": "string",
      "default": ""
    },
    "image1Alt": {
      "type": "string",
      "default": ""
    },
    "image2Id": {
      "type": "number",
      "default": 0
    },
    "image2Url": {
      "type": "string",
      "default": ""
    },
    "image2Alt": {
      "type": "string",
      "default": ""
    },
    "image3Id": {
      "type": "number",
      "default": 0
    },
    "image3Url": {
      "type": "string",
      "default": ""
    },
    "image3Alt": {
      "type": "string",
      "default": ""
    },
    "image4Id": {
      "type": "number",
      "default": 0
    },
    "image4Url": {
      "type": "string",
      "default": ""
    },
    "image4Alt": {
      "type": "string",
      "default": ""
    },
    "width": {
      "type": "string",
      "default": ""
    },
    "height": {
      "type": "string",
      "default": ""
    }
  },
  "variations": [
    {
      "name": "asymmetric",
      "title": "Image Grid: Asymmetric",
      "description": "Two columns with varied image sizes",
      "isDefault": true,
      "icon": "grid-view",
      "attributes": {
        "gridLayout": "asymmetric"
      },
      "scope": [
        "block",
        "transform"
      ]
    },
    {
      "name": "equal",
      "title": "Image Grid: Equal Size",
      "description": "Four equal-sized images in a 2x2 grid",
      "icon": "grid-view",
      "attributes": {
        "gridLayout": "equal"
      },
      "scope": [
        "block",
        "transform"
      ]
    },
    {
      "name": "masonry",
      "title": "Image Grid: Masonry",
      "description": "Pinterest-style masonry layout",
      "icon": "grid-view",
      "attributes": {
        "gridLayout": "masonry"
      },
      "scope": [
        "block",
        "transform"
      ]
    }
  ]
}