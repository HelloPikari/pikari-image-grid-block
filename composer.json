{
	"name": "pikari/pikari-image-grid-block",
	"description": "A customizable image grid block for WordPress",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Steve Ariss",
			"email": "steve@pikari.io"
		}
	],
	"require": {
		"php": ">=8.2"
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "^3.10",
		"wp-coding-standards/wpcs": "^3.1",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"phpcsstandards/phpcsutils": "^1.0.12",
		"phpunit/phpunit": "^9.5",
		"php-stubs/wordpress-stubs": "^6.6"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"scripts": {
		"lint": "phpcs",
		"lint:fix": "phpcbf",
		"lint:file": "phpcs --standard=phpcs.xml",
		"test": "phpunit",
		"test:coverage": "phpunit --coverage-html tests/coverage"
	}
}
