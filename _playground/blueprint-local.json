{
	"$schema": "https://playground.wordpress.net/blueprint-schema.json",
	"preferredVersions": {
		"php": "8.2",
		"wp": "latest"
	},
	"landingPage": "/",
	"login": false,
	"features": {
		"networking": true
	},
	"steps": [
		{
			"step": "setSiteOptions",
			"options": {
				"blogname": "Pikari Image Grid Block - Local Development"
			}
		},
		{
			"step": "installTheme",
			"themeZipFile": {
				"resource": "wordpress.org/themes",
				"slug": "twentytwentyfour"
			}
		},
		{
			"step": "activatePlugin",
			"pluginPath": "pikari-image-grid-block/pikari-image-grid-block.php"
		},
		{
			"step": "writeFile",
			"path": "/wp-content/uploads/demo-1.jpg",
			"data": {
				"resource": "url",
				"url": "https://raw.githubusercontent.com/pikari/pikari-image-grid/main/_playground/images/demo-1.jpg"
			}
		},
		{
			"step": "writeFile",
			"path": "/wp-content/uploads/demo-2.jpg",
			"data": {
				"resource": "url",
				"url": "https://raw.githubusercontent.com/pikari/pikari-image-grid/main/_playground/images/demo-2.jpg"
			}
		},
		{
			"step": "writeFile",
			"path": "/wp-content/uploads/demo-3.jpg",
			"data": {
				"resource": "url",
				"url": "https://raw.githubusercontent.com/pikari/pikari-image-grid/main/_playground/images/demo-3.jpg"
			}
		},
		{
			"step": "writeFile",
			"path": "/wp-content/uploads/demo-4.jpg",
			"data": {
				"resource": "url",
				"url": "https://raw.githubusercontent.com/pikari/pikari-image-grid/main/_playground/images/demo-4.jpg"
			}
		},
		{
			"step": "importWxr",
			"file": {
				"resource": "url",
				"url": "https://raw.githubusercontent.com/pikari/pikari-image-grid/main/_playground/demo-content.xml"
			}
		},
		{
			"step": "setSiteOptions",
			"options": {
				"show_on_front": "page",
				"page_on_front": 27
			}
		}
	]
}
